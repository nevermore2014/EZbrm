<table style="font-size:25px;">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>category</th>
  </tr>
  <% for location in current_user.locations %>
    <tr>
      <td><%= location.name %></td>
      <td><%= location.address %></td>
      <td><%= location.category %></td>

      <td>
        <button type="button" class="btn btn-default btn-lg">
          <span class="glyphicon glyphicon-star"></span> <%= link_to "Show", user_location_path(current_user.id, location) %>
        </button>  
      </td> 

      <td>
        <button type="button" class="btn btn-default btn-lg">
          <span class="glyphicon glyphicon-star"></span> <%= link_to "Edit", edit_user_location_path(current_user.id, location) %>
        </button>  
      </td>

      <td>
        <button type="button" class="btn btn-default btn-lg">
          <span class="glyphicon glyphicon-star"></span> <%= link_to "Destroy", user_location_path(current_user, location), :confirm => 'Are you sure?', :method => :delete %>
        </button>
      </td>
    </tr>
  <% end %>
</table>

<p style="font-size:25px;"><%= link_to "Create a new startup!", new_user_location_path(current_user.id) %></p>

